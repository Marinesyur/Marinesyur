//hw-01-1
#include <iostream>
using namespace std;

double uravnenenie(double a, double b, double c) {
	return (c - b) / a;
}
int main() {
	cout << "Введите коеффициенты a,b,c через пробел: ";
	int a, b, c;
	cin >> a >> b >> c;
	cout << uravnenenie(a, b, c) << endl;
}



//hw-01-2
#include <iostream>
using namespace std;

void foo(int n) {
	if (n > 0) {
		cout << "Число положительное." << endl;
	}
	else if (n == 0) {
		cout << "Число является нулем." << endl;
	}
	else {
		cout << "Число отрицательное." << endl;
	}
}
int main() {
	cout << "Введите число: ";
	int n;
	cin >> n;
	foo(n);
}
